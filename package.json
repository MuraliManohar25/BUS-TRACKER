{
  "name": "bus-tracker",
  "version": "1.0.0",
  "description": "Student-as-Beacon Bus Tracker System",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "install-functions": "cd functions && npm install",
